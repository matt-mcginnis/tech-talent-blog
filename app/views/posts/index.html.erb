<p id="notice"><%= notice %></p>

<div class="jumbotron">
    <div class="container">
        <h1>Posts</h1>
    </div>
</div>

<div class="container">
<table class="table" style="border-bottom: 1px solid #ddd;">
  <thead>
    <tr>
      <th>Author</th>
      <th>Blog entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.blog_entry %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
</div>
