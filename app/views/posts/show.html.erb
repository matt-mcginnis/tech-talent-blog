<p id="notice"><%= notice %></p>

<div class="container">

<p>
  <strong>Author:</strong>
  <%= @post.user.username %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry %>
</p>

<div id="comments">
    <%= render 'comments/form', comment: @comment %>
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Author</th>
            <th>Comment</th>
            <th>Time Posted</th>
        </tr>
    </thead>
    <tbody>
        <% @post.comments.each do |comment| %>
            <tr>
                <td><%= comment.user.username %></td>
                <td><%= comment.comment_entry %></td>
                <td><%= comment.created_at.in_time_zone("America/New_York").strftime("%m-%d-%Y at %I:%M%p") %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

</div>
